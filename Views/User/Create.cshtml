@using EnkodevCoreIdentity.ViewModels
@model UserCreateViewModel
<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <!--end of col-->
                <div class="col-12 col-md-6 col-lg-5">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Create">
                                <div class="form-group">
                                    <label asp-for="@Model.UserName">Username</label>
                                    <input asp-for="@Model.UserName" type="text" class="form-control form-control-lg" placeholder="Pick a username">
                                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.Email">Email address</label>
                                    <input asp-for="@Model.Email" type="email" class="form-control form-control-lg" placeholder="Enter email">
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    <small id="emailHelp" class="form-text">We'll never share your email with anyone else.</small>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.Password">Password</label>
                                    <input asp-for="@Model.Password" type="password" class="form-control form-control-lg" placeholder="Password">
                                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="@Model.Street">Street Address</label>
                                    <input asp-for="@Model.Street" type="text" list="datlistOptions" id="registerLocation" class="form-control form-control-lg" placeholder="&#xf041">
                                    <div id="datalistOptions">
                                    </div>
                                    <span asp-validation-for="@Model.Street" class="text-danger"></span>

                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.ZipCode">Zip Code</label>
                                    <input asp-for="@Model.ZipCode" type="text" list="datlistOptions" id="registerLocation" class="form-control form-control-lg" placeholder="&#xf041">
                                    <div id="datalistOptions">
                                    </div>
                                    <span asp-validation-for="@Model.ZipCode" class="text-danger"></span>

                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.City">City</label>
                                    <input asp-for="@Model.City" type="text" list="datlistOptions" id="registerLocation" class="form-control form-control-lg" placeholder="&#xf041">
                                    <div id="datalistOptions">
                                    </div>
                                    <span asp-validation-for="@Model.City" class="text-danger"></span>

                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.State">State</label>
                                    <input asp-for="@Model.State" type="text" list="datlistOptions" id="registerLocation" class="form-control form-control-lg" placeholder="&#xf041">
                                    <div id="datalistOptions">
                                    </div>
                                    <span asp-validation-for="@Model.State" class="text-danger"></span>

                                </div>



                               @* <div class="mb-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" value="agree" name="agree-terms" id="check-agree">
                                        <label class="custom-control-label text-small" for="check-agree">
                                            I agree to the <a href="#">Terms &amp; Conditions</a>
                                        </label>
                                    </div>
                                </div>*@
                                <button type="submit" class="btn btn-lg btn-success btn-block">Save</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>
